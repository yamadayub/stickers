add_timeline = `\
  <% @add_tweets.each_with_index do |tw, i| %>\
    <%= form_with model: Post.new do |form| %>\
      <%= form.hidden_field :tweet_id, :value => tw.tweet_id  %>\
      <%= form.hidden_field :sns_post_url, :value => tw.tweet_url  %>\
      <div class="tweet">\
        <img src="<%= tw.profile_image_url %>" class="rounded-circle tweet_icon">\
        <span class="tweet_text"><%= tw.text %></span>\
        <%= button_tag :type => "submit", :class =>"btn btn-default btn-lg tweet_button" do %>\
          <i class="fas fa-angle-right"></i>\
        <% end %>\
      </div>\
      <% end %>\
  <% end %>\
  `;

$("#timeline").append(add_timeline);
$("#load_tweets").html(`<%= link_to "Load more tweets", tweets_timeline_reload_path( username: @username, last_tweet_id: @last_tweet_id ), remote: true, class: 'btn btn-block search_button rounded-pill mt-3 mb-3' %>`);

