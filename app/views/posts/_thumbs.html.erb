<div class="col-12 p-3">
  <% if post.thumbsup - post.thumbsdown > 0 %>
    <div class="border border-dark bg-success mt-1 p-2 text-center font-weight-bold">
        <i class="far fa-thumbs-up"></i> - <i class="far fa-thumbs-down"></i> =
        <span><%= post.thumbsup - post.thumbsdown %></span>
    </div>
  <% elsif post.thumbsup - post.thumbsdown == 0 %>
    <div class="border border-dark bg-white mt-1 p-2 text-center font-weight-bold">
        <i class="far fa-thumbs-up"></i> - <i class="far fa-thumbs-down"></i> =
        <span><%= post.thumbsup - post.thumbsdown %></span>
    </div>
  <% else %>
    <div class="order border-dark bg-danger mt-1 p-2 text-center font-weight-bold">
        <i class="far fa-thumbs-up"></i> - <i class="far fa-thumbs-down"></i> =
        <span><%= post.thumbsup - post.thumbsdown %></span>
    </div>
  <% end %>
</div> 

<div class="col-12" id="thumbsup-link-<%= post.id %>">
  <%= link_to  thumbsup_post_path, post_id: post.id, remote: true, class: 'btn btn-block btn-outline-dark bg-white rounded-pill mt-1' do %>
    <i class="far fa-thumbs-up"></i>
    <span id="thumbsup_number"><%= post.thumbsup %></span>
  <% end %>
</div>  
<div class="col-12" id="thumbsdown-link-<%= post.id %>">
  <%= link_to  thumbsdown_post_path, post_id: post.id, remote: true, class: 'btn btn-block btn-outline-dark bg-white rounded-pill mt-1' do %>
    <i class="far fa-thumbs-down"></i>
    <span id="thumbsdown_number"><%= post.thumbsdown %></span>
  <% end %>
</div>